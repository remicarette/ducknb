
<%full_stars = "<i class='fas fa-star'></i>"%>
<%empty_stars = "<i class='far fa-star'></i>"%>
<%half_stars = "<i class='fas fa-star-half-alt'></i>"%>


<% array.each do |duck| %>
  <%= link_to duck_path(duck), class: "text-decoration-none" do %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= duck.photo %>')">
    <%= duck.name %>
    <div class="avatar">
      <%= image_tag(duck.user.photo)%>
    </div>
    <div class="reviews">
      <div class="text-center">
        <%= duck.nb_reviews.to_s + " reviews"%>
      </div>

      <div class="stars">
        <% duck.show_stars[0].times do %>
          <%= full_stars.html_safe %>
        <% end %>
        <% duck.show_stars[1].times do %>
          <%= half_stars.html_safe %>
        <% end %>
        <% duck.show_stars[2].times do %>
          <%= empty_stars.html_safe %>
        <% end %>

      </div>
    </div>
    <div class="city">
      <div>
        <span class="card-price"><%= duck.price.round() %> â‚¬ / day</span>
      </div>
      <div class="d-flex align-items-end flex-column card-city">
        <div><%= duck.user.city%></div>
      </div>
    </div>


  </div>
  <% end %>

<% end %>
