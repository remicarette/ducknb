<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between">

  <div class="d-flex align-items-center">
    <span class ="navbar-brand">
      <%= image_tag 'duck_logo.jpg', class: "navbar-brand" %>Ducknb
    </span>

    <%= form_tag ducks_path, method: :get, class:'form-inline', enforce_utf8: false do %>
      <%= text_field_tag :search,
        params[:query],
        class: "form-control",
        placeholder: "Find a duck"
      %>
      <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
    <% end %>

  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
      <li class="nav-item">
        <%= link_to "Booking", ducks_path, class: "nav-link" %>
      </li>
       <li class="nav-item">
        |
      </li>
      <li class="nav-item">
        <%= link_to "Manage", edit_user_registration_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        |
      </li>

      <li class="nav-item">
        <%= link_to "Add a Duck",  new_duck_path, class: "nav-link" %>
      </li>

      <!-- DROPDOWN ON AVATAR -->

      <li class="nav-item dropdown mx-3">
        <%= image_tag user.photo ,
              class: "avatar dropdown-toggle",
              alt: "avatar",
              role: "button",
              data: {
                toggle: "dropdown"
              },
              aria: {
                haspopup: true,
                expanded: false
              }
        %>
        <!-- DROPDOWN MENU -->
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Book a duck",  ducks_path, class: "dropdown-item" %>
          <%= link_to "Add a Duck",  new_duck_path, class: "dropdown-item" %>
          <%= link_to "Manage your ducks",  "/profiles/#{current_user.id}", class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Profile",  "#", class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
        </div>

      </li>

    </ul>
  </div>
</div>
