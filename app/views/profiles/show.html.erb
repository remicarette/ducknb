
<div class="container">
  <div class="col-12 d-flex justify-content-around">
    <div>
      <% @user.ducks.each do |duck| %>
        <div class="card-product d-flex justify-content-between w-100 m-3">

          <!-- image  -->
          <div class="d-flex align-items-center">
            <div class="d-flex align-items-center">
                  <%# image_tag , alt: picture.name, class:"avatar-duck"%>
                  <%= cl_image_tag(duck.photo, width: 400, height: 300, crop: :fill, class: "avatar-duck" )%>
            </div>

            <!-- card -->
            <div class="card-product-infos">
                <h2><%= duck.name.capitalize %></h2>
                <p>Product description with <strong>relevant info</strong> only.</p>
            </div>
          </div>

          <div class="d-flex align-items-center">
            <div>
              <%= link_to "More details", duck_path(duck), class: "btn btn-primary mx-2" %>
            </div>

            <div>
              <%= link_to "Edit", duck_path(duck), class: "btn btn-warning mx-2" %>
            </div>

            <div>
              <%= link_to "Delete", duck_path(duck),
              method: :delete,
              data: { confirm: "Are you sure?" },
               class: "btn btn-danger mx-2"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
