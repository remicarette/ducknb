<div class="container">
  <ul class="nav nav-pills justify-content-center p-4 mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link btn btn-light rounded px-3" id="pills-my-ducks-tab" data-toggle="pill" href="#pills-my-ducks" role="tab" aria-controls="pills-my-ducks" aria-selected="false">confirm</a>
    </li>
    <li class="nav-item">
      <a class="nav-link btn btn-light active rounded px-3" id="pills-pending-tab" data-toggle="pill" href="#pills-pending" role="tab" aria-controls="pills-pending" aria-selected="true">pending</a>
    </li>
    <li class="nav-item">
      <a class="nav-link btn btn-light rounded px-3" id="pills-accepted-tab" data-toggle="pill" href="#pills-accepted" role="tab" aria-controls="pills-accepted" aria-selected="false">accepted</a>
    </li>
    <li class="nav-item">
      <a class="nav-link btn btn-light rounded px-3" id="pills-refused-tab" data-toggle="pill" href="#pills-refused" role="tab" aria-controls="pills-refused" aria-selected="false">refused</a>
    </li>
  </ul>
  <!--<div class="row">-->
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade" id="pills-my-ducks" role="tabpanel" aria-labelledby="pills-my-ducks">
        <% @my_ducks_bookings.each do |booking| %>
          <%= link_to booking_path(booking), class: "text-decoration-none" do %>
            <div class="card-booking">
              <%= cl_image_tag(booking.duck.photo,
              width: 150, height: 150, crop: :thumb, gravity: :face) %>
              <div class="card-booking-infos">
                <h2> <%= booking.duck.name %> <%= booking.duck.first_name %></h2>
                <p>From <%= booking.start%> Until <%= booking.end%></p>
                <%= link_to "Accept", booking_accepted_path(booking), method: :patch, class: "checkbox" %>
                <%= link_to "Refuse", booking_refused_path(booking), method: :patch, class: "checkbox" %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="tab-pane fade show active" id="pills-pending" role="tabpanel" aria-labelledby="pills-pending">
        <%@pending.each do |booking| %>
          <%= link_to booking_path(booking), class: "text-decoration-none" do %>
            <% render "card", booking: booking %>
          <% end %>
        <% end %>
      </div>
      <div class="tab-pane fade" id="pills-accepted" role="tabpanel" aria-labelledby="pills-accepted">
        <% @accepted.each do |booking| %>
          <%= link_to booking_path(booking), class: "text-decoration-none" do %>
            <% render "card", booking: booking %>
          <%end%>
        <%end%>
      </div>
      <div class="tab-pane fade" id="pills-refused" role="tabpanel" aria-labelledby="pills-refused">
        <%@refused.each do |booking|%>
          <%= link_to booking_path(booking), class: "text-decoration-none" do %>
            <% render "card", booking: booking %>
          <%end%>
        <%end%>
      </div>
    </div>
  <!--</div>-->
  <br>
</div>
